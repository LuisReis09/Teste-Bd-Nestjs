generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente{
  id      BigInt    @id @default(autoincrement())
  nome    String
  idade   Int

  pedidos Pedido[]
}

model Produto{
  id     BigInt    @id @default(autoincrement())
  nome   String    
  descricao     String?
  preco         Float 
  quantidade    Int

  pedidos Pedido[]
}

model Pedido{
  id     BigInt    @id @default(autoincrement())
  quantidade      Int
  valor_total     Int

  clienteId    BigInt
  cliente      Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  produtoId    BigInt
  produto      Produto  @relation(fields: [produtoId], references: [id], onDelete: Cascade)
}